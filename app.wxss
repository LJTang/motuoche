line-height: 100rpx;}
/*********** 弹出框 *************/
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}
/*content*/
.drawer_box {
  width: 750rpx;
  overflow: hidden;
  position: fixed;
  bottom:0;
  left: 0;
  z-index: 1001;
  background: #FAFAFA;
}
.drawer_title{
  height:50px;
  line-height:50px;
  background:#ec5958;
  color:#FFFFFF;
}
.drawer_title view{
  display: inline-block;
  line-height:50px;
  margin:0 20rpx;
}

.drawer_content {
  height: 360px;
  overflow-y: scroll; /*超出父盒子高度可滚动*/
}

/** 弹出框**/
.popUp_Box{
  position:fixed;
  top:0;
  left:0;
  height:100%;
  width:100%;
}
.shadow{
  height:100%;
  width:100%;
  position:relative;
  background:#000;
  opacity:0.5;
  filter:alpha(opacity=50);
  z-index:10;
}
.show_Layer{
  position: absolute;
  background:#fff;
  border-radius:5px;
  z-index:11;
}
.centered{
  top:15%;
  left:50rpx;
}
.fixed_WH{
  width:650rpx;
  height:70%;
  top:15%;
  left:50rpx;
}
.authorized_Box{
  width:550rpx;
  height:350rpx;
  top:50%;
  margin-top: -250rpx;
  left:100rpx;
}
/*
***关闭按钮
*/
.show_Layer .clear{
  height:70rpx;
  margin:20rpx 20rpx 0;
}
/*
***授权框
*/
.authorized_Box{
  font-size:32rpx;
  text-align: center;
}
.authorized_Describe{
  line-height: 249rpx;
}
.authorized_Btn{
  width: 550rpx;
  height:100rpx;
  line-height:100rpx;
  display: flex;
  border-top:1rpx solid #999;
}
.authorized_Btn .btn_Cancel,.authorized_Btn .btn_OK{
  width:100%;
  line-height:100rpx;
}
.authorized_Btn .btn_Cancel{
  border-right:1rpx solid #999;
}
.authorized_Btn button{
  height:100rpx;
  line-height:100rpx;
  margin:0;
  padding: 0;
  background:none;
  border:none;
  font-size:32rpx;
  color:#00c670;
}
button::after{
  border:none;
}
.noLoadMore{
  padding:20rpx 0;
  color:#999;
}