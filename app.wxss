/***** 加载 ******/
.toLoadMore{
  width:400rpx;
  line-height: 80rpx;
  text-align: center;
  margin:20rpx auto;
  border:1rpx solid #ddd;
  border-radius: 5px;
  color:#999;
}

/********/
.home_Footer{
  width:750rpx;
  position:fixed;
  left:0;
  right:0;
  bottom:0;
  z-index:999;
  height:100rpx;
  background-color:#fff;
  border-top:1px solid #ddd;
  display:flex;
  flex-wrap:wrap;
  align-items:center;
  justify-content:space-around;
  box-sizing:border-box;

}
.home_Footer image {
  width:50rpx;
  height:50rpx;
  display:block;
  margin:0 auto;

}
.home_Footer button{width:100rpx;height:100rpx;}
.home_Footer button view{height:50rpx;line-height: 50rpx;}
.home_Footer text.on {
  color:#ffaf00;
}
.home_Footer text {
  font-size:28rpx;
  color:#999;
  display:block;
}
.home_Footer button:nth-child(3) image{
  width:80rpx;
  height:80rpx;
  position:fixed;
  bottom:50rpx;
  left:50%;
  margin-left:-40rpx;
}
