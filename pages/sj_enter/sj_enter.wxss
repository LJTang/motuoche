.popUp_Box{
  position:fixed;
  top:0;
  left:0;
  height:100%;
  width:100%;
}
.shadow{
  height:100%;
  width:100%;
  position:relative;
  background:#000;
  opacity:0.5;
  filter:alpha(opacity=50);
  z-index:10;
}
.show_Layer{
  position: absolute;
  background:#fff;
  z-index:11;
  border-radius:0;
}
.popUp_Box .classify_Box{
  width:600rpx;
  height: 100%;
  background: #fff;
  top:0;
  left:150rpx;
}
