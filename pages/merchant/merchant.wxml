<view class="container">
  <view class="head bgFFF">
    <navigator url="/pages/sj_enter/sj_enter" hover-class="none">
      <view class="centerByContent">
        <view class="title display_F"><image src="/images/dian.png" mode=""></image></view>
        <view class="centeredContent">
          <view class="f32R">我是商家，点击入驻商圈</view>
          <view class="f28R c9 mat10R">记得有效、方便快捷</view>
        </view>
        <view class="centerByContent_Right"><image src="/images/arrow.png" mode=""></image></view>
      </view>
    </navigator>
  </view>
  <view class="nav bgFFF">
    <view class="classify">
      <view bindtap="popOpen">全部分类<image src="/images/classify.png"></image></view>
      <view bindtap="popOpen">综合排序<image src="/images/classify.png"></image></view>
      <view bindtap="popOpen">地区<image src="/images/classify.png"></image></view>
    </view>
  </view>


  <scroll-view class="mat10" scroll-y style="height:{{height}}px;background:#fff;" bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-top="{{scrollTop}}">
    <view class="goods_List bgFFF">
      <navigator url="/pages/business_details/business_details" hover-class="none">
        <view class="layout_LR">
          <view class="layout_Left"><image src="/images/motuo.png" mode="widthFix"></image></view>
          <view class="layout_Right">
            <view class="h50"><text class="f34R d_Text">雅马哈T-1085</text> <text class="fR">···</text></view>
            <view class="middle_line"></view>
            <view class="cC"><view class="fL w50_H" style="text-align:left;"><image src="/images/h_addrsess.png"></image>高端大气</view><text class="fR">￥26540</text></view>
          </view>
        </view>
      </navigator>

      <view  class="pat20R pab20R">
        <!--<view class="noMoreData" hidden="{{noMoreHidden}}">没有更多了</view>-->
        <!--<view class="inLoad pat20 pab20" hidden="{{inLoadHidden}}"><image src="/images/loading.gif"></image><span>加载中...</span></view>-->
        <!--<view class="toLoadMore" hidden="{{loadMoreHidden}}" bindtap="onGetConnect">查看更多</view>-->
        <view class="toLoadMore" bindtap="onGetConnect">查看更多</view>
      </view>
    </view>
  </scroll-view>

  <!-- 导航栏 -->
  <view class='home_Footer container'>
    <block wx:for="{{nav}}" wx:for-item="list" wx:key="">
      <button open-type="{{list.type}}" class='fnav_list' bindtap="jump" data-url='{{list.url}}' data-index="{{index}}">
        <view><image src='{{list.img}}'></image></view>
        <view><text class='{{list.on == true ? "on" :""}}'>{{list.text}}</text></view>
      </button>
    </block>
  </view>
</view>

<view class="popUp_Box" wx:if="{{popUP_Bool}}">
  <view class="shadow" bindtap="popClose"></view>
  <view class="show_Layer classify_Box">
    <view class="list_Box">
        <view>全部分类</view>
        <view>全部分类</view>
        <view>全部分类</view>
        <view>全部分类</view>
    </view>
  </view>
</view>