/*** 商品列表 ****/
.container{
  font-size:30rpx;
  background:#f5f5f5;
}
.goods_List{
  width:750rpx;
  background:#fff;
}
.goods_List .layout_LR .layout_Left{
  width:120rpx;
  margin-left:20rpx;
  margin-right:20rpx;
}
.goods_List .layout_LR .layout_Left image{
  width:120rpx;
  height:120rpx;
  border-radius:50%;
}
.goods_List .layout_LR .layout_Right{
  text-align:left;
  width:550rpx;
  margin-right: 20rpx;
}
.goods_List .layout_LR .layout_Right view text.btn{
  display:inline-block;
  width:120rpx;
  padding:2rpx 0;
  text-align: center;
  background:#00c670;
  color: #fff;
  border-radius: 5px;
}
.goods_List .address image{
   width:30rpx;
   height:30rpx;
  vertical-align: middle;
  margin-right:10rpx;
}
.goods_List .address span{
  background:#f5f5f5;
  padding:1rpx 10rpx;
  font-size: 28rpx;
  color:#999;
}
.goods_List .address{padding-bottom:20rpx;border-bottom:1rpx solid #ddd;}
.ask_Btn{
  width: 750rpx;
  height:100rpx;
  line-height:100rpx;
  display: flex;
  font-size:30rpx;
  background:#ffffff;
  color:#999;
}
button{
  font-size:30rpx;
  background:#ffffff;
  color:#999;
}
.ask_Btn view{
  width:250rpx;
}
.ask_Btn image{
  width:30rpx;
  height:30rpx;
  margin-right:20rpx;
  vertical-align: middle;
}