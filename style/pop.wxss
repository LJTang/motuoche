.popUp_Box{
  position:fixed;
  top:0;
  left:0;
  height:100%;
  width:100%;
}
.shadow{
  height:100%;
  width:100%;
  position:relative;
  background:#000;
  opacity:0.5;
  filter:alpha(opacity=50);
  z-index:10;
}
.show_Layer{
  position: absolute;
  background:#fff;
  z-index:11;
  border-radius:0;
}
.popUp_Box .classify_Box{
  width:600rpx;
  height: 100%;
  background: #fff;
  top:0;
  left:150rpx;
}
.popUp_Box .classify_Box .list_Box view{
  display: inline-block;
  width:270rpx;
  height:80rpx;
  line-height:80rpx;
  text-align: center;
  background: #f5f5f5;
  color:#999;
  margin:20rpx 0 0 20rpx;
  border-radius:5px;
}
.classify_Box .title{
  background:#ffaf00;
  color:#fff;
  height:80rpx;
  line-height:80rpx;
  text-align:center;
}
.brand_Box{
  overflow:auto;
  background:#f3f3f3;
}
.az_box{
  background:#f3f3f3;
  color:#999;
  height:60rpx;
  line-height:60rpx;
}
.az_text{
  background:#fff;
  color:#000;
  height:80rpx;
  line-height:80rpx;
  border-bottom:1rpx solid #f3f3f3;
}
.az_list text{
  padding-left: 20rpx;
}